    "express-validator": "^7.2.1",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "prisma": "^6.11.1",
    "supertest": "^7.1.3"
